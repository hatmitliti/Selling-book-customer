<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:paddingTop="100dp"
        android:gravity="center"
        android:orientation="vertical">
        <EditText
            android:id="@+id/txtHoVaTen"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_listview"
            android:ems="15"
            android:hint="  Nhập họ tên"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtMail"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_listview"
            android:ems="15"
            android:hint="  Địa chỉ mail"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtNgaySinh"
            android:inputType="date"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_listview"
            android:ems="15"
            android:hint="  Ngày sinh"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtPasswordRegister"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_listview"
            android:ems="15"
            android:hint="  Password"
            android:inputType="textPassword"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtRePasswordRegister"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_listview"
            android:ems="15"
            android:hint="  Repassword"
            android:inputType="textPassword"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnDangKyTaiKhoan"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/teal_200"
            android:text="Đăng ký"
            android:textColor="#fff"
            android:textSize="16dp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>